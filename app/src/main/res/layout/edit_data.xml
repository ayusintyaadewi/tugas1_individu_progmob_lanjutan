<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F8FF">

    <TextView
        android:id="@+id/text_id_konsumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Data Konsumen ID "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/editText_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_id_konsumen"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:background="#afffffff"
        android:ems="10">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_nama"
        android:layout_alignStart="@+id/editText_nama"
        android:layout_marginTop="15dp"
        android:background="#afffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_telepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_alamat"
        android:layout_alignStart="@+id/editText_nama"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:background="#afffffff"
        android:ems="10"
        android:inputType="number" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_below="@id/editText_telepon"
        >
        <Button
            android:id="@+id/button_save_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tombol_edit"
            />

        <Button
            android:id="@+id/button_cancel_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tombol_cancel"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_nama"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:textColor="#000000"
        android:layout_marginLeft="45dp"
        android:text="Nama      : " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_alamat"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="2dp"
        android:textColor="#000000"
        android:layout_marginLeft="45dp"
        android:text="Alamat    : " />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginLeft="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_telepon"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="3dp"
        android:text="Telepon   : " />
</RelativeLayout>